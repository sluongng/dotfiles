{
  "suggest.autoTrigger": "always",
  "suggest.floatEnable": true,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "gosnippets/UltiSnips"
  ],
  "python.formatting.provider": "black",
  "json.format.enable": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod"
      ],
      "initializationOptions": {
        "buildFlags": [
          "-tags='integration'"
        ],
        "hoverKind": "FullDocumentation",
        "staticcheck": true,
        "gofumpt": true,
        "directoryFilters": [
          "-bazel-out",
          "-bazel-bin",
          "-bazel-og"
        ],
        "analyses": {
          "fieldalignment": true,
          "fillreturns": true,
          "undeclarename": true,
          "unusedparams": true,
          "nonewvars": true
        }
      },
      "filetypes": [
        "go"
      ]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
